/**
 * main - printing
 * Return: 0
 */

#include <stdlib.h>
#include <time.h>
/* more headers goes there */

/* betty style doc for function main goes there */
int main(void)
{
	int n;
	char inttype;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	/* your code goes there */
	if (n == 0)
	  {
	    inttype = "zero";
	  }
	else if (n > 0)
	  {
	    inttype = "positive";
	  }
	else
	  {
	    inttype = "negative";
	  }
	printf("%d is %s" n, inttype);
	return (0);
}
